@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NhanVien</title>
</head>
<body>
    <div ng-show="show">
        <form name="formAdd" ng-submit="InsUpdNhanVien()">
            <input type="hidden" class="form-control" id="ID" ng-model="ID">
            <div class="form-group">
                <label for="exampleInputEmail1">Họ tên</label>
                <input type="text" class="form-control" id="hoten" placeholder="Họ tên" ng-model="HoTen" required>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Email</label>
                <input type="text" class="form-control" id="email" placeholder="Email" ng-model="Email" required>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Địa chỉ</label>
                <input type="text" class="form-control" id="diachi" placeholder="Địa chỉ" ng-model="DiaChi" required>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Số điện thoại</label>
                <input type="text" class="form-control" id="sodienthoai" placeholder="Số điện thoại" ng-model="SoDienThoai" required>
            </div>
            <button type="button" class="btn btn-default" ng-click="cancelSave()">
                Cancel
            </button>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    <br />
    <button ng-hide="show" class="btn btn-default" type="button" style="margin-bottom:20px" ng-click="themnhanvien()">Add Nhân viên</button>


    <div>
        <table class="table table-bordered table-hover" style="width:100%">
            <tr>
                <th>ID</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>Số điện thoại</th>
                <th>Edit/Delete</th>
            </tr>
            <tr data-ng-repeat="nhanvien in NhanViens">
                <td><strong>{{ nhanvien.ID }}</strong></td>
                <td><strong>{{ nhanvien.HoTen }}</strong></td>
                <td><strong>{{ nhanvien.Email }}</strong></td>
                <td><strong>{{ nhanvien.DiaChi }}</strong></td>
                <td><strong>{{ nhanvien.SoDienThoai }}</strong></td>
                <td>
                    <button type="button" class="btn" ng-click="editNhanVien(nhanvien.ID)">Edit</button>
                    <button type="button" class="btn" ng-click="deleteNhanVien(nhanvien.ID)">Delete</button>
                </td>
            </tr>
        </table>
    </div>


</body>
</html>
